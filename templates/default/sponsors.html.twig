{% extends 'layout.html.twig' %}

{% block title %}Sponsors{% endblock %}

{% block content %}
    <div class="content">
        <h1>Sponsors</h1>
        <div class="text-center">Les Amis de la Schlager remercient chaleureusement tous les sponsors de leur généreux soutien.</div>
        <div class="flex flex-col gap-2">
            <h2 class="text-center">Ski d'Or</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-12 items-center">
                <div>
                    <img src="{{ asset('images/sponsors/bornet-transport.jpg') }}" class="w-36 rounded mx-auto" alt="Bornet Transports">
                </div>
                <div>
                    <img src="{{ asset('images/sponsors/carrosserie-berner.png') }}" class="rounded" alt="Carrosserie Berner">
                </div>
                <div>
                    <img src="{{ asset('images/sponsors/ciampitti.jpg') }}" alt="Ciampitti">
                </div>
                <div>
                    <img src="{{ asset('images/sponsors/gilliard.png') }}" alt="Gilliard">
                </div>
                <div>
                    <img src="{{ asset('images/sponsors/baobab.jpg') }}" alt="Baobab">
                </div>
            </div>
        </div>
        <div class="flex flex-col gap-2">
            <h2 class="text-center">Ski d'Argent</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-12 items-center">
                <div>
                    <img src="{{ asset('images/sponsors/vouillamoz.png') }}" alt="Vouillamoz">
                </div>
                <div>
                    <img src="{{ asset('images/sponsors/disiere.jpg') }}" alt="Disière">
                </div>
            </div>
        </div>
        <div class="flex flex-col gap-2">
            <h2 class="text-center">Ski de Bronze</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-12 items-center">
                <div>
                    <img src="{{ asset('images/sponsors/materiaux-plus.jpg') }}" alt="Matériaux Plus">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
